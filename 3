package assignment;
import java.util.*;
public class Assignment3 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Enter two numbers");
		double a,b,ans1,ans2;
		a = input.nextDouble();
		b = input.nextDouble();
		
		ans1=a/b;
		ans2=a%b;
		System.out.println("Quotient is "+ans1);
		System.out.println("Reminder is "+ans2);

	}

}
